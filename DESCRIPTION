    R (>= 3.0.0),
    alakazam (>= 0.2.0),
    doSNOW,
    ggplot2,
    plyr
Imports:
    data.table,
    foreach,
    SDMTools,
    seqinr,
    zoo
Suggests:
    knitr
VignetteBuilder: knitr
LazyData: yes
